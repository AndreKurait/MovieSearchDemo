# Search Engine Configuration
# ----------------------------
# Use Elasticsearch (default) or OpenSearch
USE_OPENSEARCH=false

# Elasticsearch connection
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# OpenSearch connection (only used when USE_OPENSEARCH=true)
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_USERNAME=
OPENSEARCH_PASSWORD=

# For Amazon OpenSearch Service with SigV4 auth:
# USE_OPENSEARCH=true
# OPENSEARCH_URL=https://my-domain.us-east-1.es.amazonaws.com
# OPENSEARCH_AUTH=sigv4
# AWS_REGION=us-east-1
# OPENSEARCH_SERVICE=es          # "es" for managed, "aoss" for serverless
